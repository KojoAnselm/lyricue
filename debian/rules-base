#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.

package=lyricue-cvs

build:
	$(checkdir)
	make
	touch build

clean:
	$(checkdir)
	rm -rf dist/lyricue-$(DEB_VERSION)
	rm -f `find . -name "*~"`
	rm -rf debian/$(package) debian/files* core debian/substvars

binary-indep: checkroot
	$(checkdir)
	rm -rf debian/$(package)
	install -d debian/$(package)
	make -B install DESTDIR=`pwd`/debian/$(package)
	dh_testdir -i -p$(package)
	dh_installdebconf -p$(package)
	dh_installchangelogs -p$(package)
	dh_perl -p$(package)
	dh_installman -i -p$(package)
	dh_installdocs -i -p$(package)
	dh_installchangelogs -i ChangeLog -p$(package)
	dh_compress -i -p$(package)
	dh_fixperms -i -p$(package)
	dh_installdeb -i -p$(package)
	dh_gencontrol -i -p$(package)
	dh_md5sums -i -p$(package)
	dh_builddeb -i -p$(package)

define checkdir
	test -f debian/rules
endef

binary: binary-indep binary-arch

.PHONY: mkdist
mkdist:
	./mkdist $(DEB_VERSION)
	cd ../dist && tar xvzf lyricue-$(DEB_VERSION).tar.gz
	cp debian ../dist/lyricue-$(DEB_VERSION) -R

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot

